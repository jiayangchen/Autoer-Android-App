<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher1"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chenjiayang.me"
        android:textSize="10sp"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 2.0"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#FF909090"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate Autoer"
        android:textSize="@dimen/about_font_size"
        android:layout_marginTop="@dimen/about"
        android:layout_gravity="start"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="@dimen/about"
        android:background="#FF909090"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feathers"
        android:textSize="@dimen/about_font_size"
        android:layout_marginTop="@dimen/about"
        android:layout_gravity="start"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="@dimen/about"
        android:background="#FF909090"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help and FeedBack"
        android:layout_marginTop="@dimen/about"
        android:textSize="@dimen/about_font_size"
        android:layout_gravity="start"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="@dimen/about"
        android:background="#FF909090"/>
    <TextView
        android:id="@+id/check_for_updates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check For Updates"
        android:layout_marginTop="@dimen/about"
        android:textSize="@dimen/about_font_size"
        android:layout_gravity="start"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="@dimen/about"
        android:background="#FF909090"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright Â© 2016 ChenJY"
        android:textSize="12sp"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All rights Reserved"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"/>

</LinearLayout>