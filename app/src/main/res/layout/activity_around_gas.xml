<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.chenjiayang.myleancloud.Gas.AroundGasActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ettt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp">

    <TextView
        android:id="@+id/around_gas_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="沙洲加油站"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/around_gas_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/iscollect"
        android:text="1624m"/>

    </LinearLayout>

    <TextView
        android:id="@+id/around_gas_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:text="江苏省苏州市张家港市西港镇永利村乐丰路202交叉口东"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FF909090" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/around_gas_price"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:text="92# 5.84元/升"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FF909090" />

        <TextView
            android:id="@+id/around_gas_fwlsmc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FF909090" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击获取详情>>"
            android:textStyle="bold"
            android:layout_marginStart="240dp"/>

    </LinearLayout>
</LinearLayout>
