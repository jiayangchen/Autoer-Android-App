<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.chenjiayang.myleancloud.RegisterActivity"
    tools:showIn="@layout/activity_main">


    <me.chenjiayang.myleancloud.util.ClearEditText
        android:id="@+id/re_usernameEditText"
        android:layout_width="310dp"
        android:layout_height="@dimen/EditTextHeight"
        android:background="@drawable/ettt"
        android:cursorVisible="false"
        android:drawableLeft="@drawable/genderneutraser_24"
        android:textSize="15sp"
        android:hint="username"/>

    <!--<EditText
